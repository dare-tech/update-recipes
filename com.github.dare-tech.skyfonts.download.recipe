<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Description</key>
  <string>Downloads the .zip file containing SkyFonts.</string>
  <key>Identifier</key>
  <string>com.github.dare-tech.skyfonts.download</string>
  <key>Input</key>
  <dict>
    <key>NAME</key>
    <string>SkyFonts</string>
  </dict>
  <key>MinimumVersion</key>
  <string>0.8.0</string>
  <key>Process</key>
  <array>
    <dict>
      <key>Processor</key>
      <string>URLTextSearcher</string>
      <key>Arguments</key>
      <dict>
        <key>url</key>
        <string>https://www.monotype.com/products/skyfonts/</string>
        <key>re_pattern</key>
        <string>cdn1\.skyfonts\.com/client/Monotype_SkyFonts_Mac64_(\d\.\d\.\d\.\d)\.zip</string>
      </dict>
    </dict>
    <dict>
    	 <key>Processor</key>
    	 <string>URLDownloader</string>
    	 <key>Arguments</key>
    	 <dict>
        <key>url</key>
    		 <string>http://cdn1.skyfonts.com/client/Monotype_SkyFonts_Mac64_%match%.zip</string>
    		 <key>filename</key>
    		 <string>%NAME%.zip</string>
    	 </dict>
    </dict>
    <dict>
      <key>Processor</key>
      <string>EndOfCheckPhase</string>
    </dict>
    <dict>
      <key>Processor</key>
      <string>Unarchiver</string>
      <key>Arguments</key>
      <dict>
        <key>archive_path</key>
        <string>%pathname%</string>
        <key>destination_path</key>
        <string>%RECIPE_CACHE_DIR%/%NAME%</string>
        <key>purge_destination</key>
        <true/>
      </dict>
    </dict>
    <dict>
      <key>Processor</key>
      <string>CodeSignatureVerifier</string>
      <key>Arguments</key>
      <dict>
        <key>input_path</key>
        <string>%RECIPE_CACHE_DIR%/%NAME%/Install SkyFonts.app</string>
        <key>requirement</key>
        <string>identifier "com.mti.SkyFontsInstaller" and anchor apple generic and certificate 1[field.1.2.840.113635.100.6.2.6] /* exists */ and certificate leaf[field.1.2.840.113635.100.6.1.13] /* exists */ and certificate leaf[subject.OU] = "9TY7K37N87"</string>
      </dict>
    </dict>
  </array>
</dict>
</plist>
